CREATE DATABASE smartyard;
CREATE TABLE smartyard.plog (
 `date` DateTime,
 `uuid` UUID,
 `image` UUID,
 `uid` Int32,
 `objectId` Int32,
 `objectType` Int8 DEFAULT 0,
 `objectMechanizma` Int8 DEFAULT 0,
 `mechanizmaDescription` String,
 `event` Int8,
 `detail` String,
 `preview` Int8 DEFAULT 0,
 `hidden` Int8 DEFAULT 0,
 `rfid` String,
 `phone` String,
 `opened` Int8 DEFAULT 0,
 INDEX plog_objectId objectId TYPE set(100) GRANULARITY 1024,
 INDEX plog_uuid uuid TYPE set(100) GRANULARITY 1024,
 INDEX plog_uid uid TYPE set(100) GRANULARITY 1024,
 INDEX plog_date date TYPE set(100) GRANULARITY 1024,
 INDEX plog_hidden hidden TYPE set(100) GRANULARITY 1024,
 INDEX plog_rfid rfid TYPE set(100) GRANULARITY 1024,
 INDEX plog_phone phone TYPE set(100) GRANULARITY 1024,
 INDEX plog_opened opened TYPE set(100) GRANULARITY 1024
 )
 ENGINE = MergeTree
 PARTITION BY toYYYYMMDD(date)
 ORDER BY date
 TTL date + toIntervalMonth(6)
 SETTINGS index_granularity = 1024;

CREATE TABLE smartyard.event (
 `deviceId` Int32,
 `startTime` DateTime,
 `endTime` DateTime,
 `eventType` Int8 DEFAULT 0,
 `deviceDesc` String,
 `uuid` UUID,
 `image` UUID,
 `preview` Int8 DEFAULT 0,
 `analisis` UUID,
 `analisDesc` String,
 INDEX plog_deviceId deviceId TYPE set(100) GRANULARITY 1024,
 INDEX plog_startTime startTime TYPE set(100) GRANULARITY 1024,
 INDEX plog_endTime endTime TYPE set(100) GRANULARITY 1024,
 INDEX plog_eventType eventType TYPE set(100) GRANULARITY 1024,
 INDEX plog_uuid uuid TYPE set(100) GRANULARITY 1024,
 INDEX plog_analisDesc analisDesc TYPE set(100) GRANULARITY 1024
 )
 ENGINE = MergeTree
 PARTITION BY toYYYYMMDD(startTime)
 ORDER BY startTime
 TTL date + toIntervalMonth(6)
 SETTINGS index_granularity = 1024;
 
